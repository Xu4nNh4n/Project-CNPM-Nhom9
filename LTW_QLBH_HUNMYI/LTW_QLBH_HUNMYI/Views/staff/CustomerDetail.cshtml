@model LTW_QLBH_HUNMYI.Models.KHACHHANG

@{
    ViewData["Title"] = "Thông tin khách hàng";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<div class="container mt-4">

    <h2 class="mb-4">📌 Thông tin chi tiết khách hàng</h2>

    <div class="card shadow p-4">
        <div class="row mb-3">
            <div class="col-md-3 font-weight-bold">Mã khách hàng:</div>
            <div class="col-md-9">@Model.MAKH</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3 font-weight-bold">Họ và tên:</div>
            <div class="col-md-9">@Model.HOTENKH</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3 font-weight-bold">Giới tính:</div>
            <div class="col-md-9">@Model.GIOITINH</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3 font-weight-bold">Số điện thoại:</div>
            <div class="col-md-9">@Model.SDT</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3 font-weight-bold">Email:</div>
            <div class="col-md-9">@Model.EMAIL</div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3 font-weight-bold">Địa chỉ:</div>
            <div class="col-md-9">@Model.DIACHI</div>
        </div>

        <div class="row mb-4">
            <div class="col-md-3 font-weight-bold">Ngày tạo:</div>
            <div class="col-md-9">@Model.NGAYDANGKY</div>
        </div>

        <div class="mt-4">
            <button type="button" class="btn btn-secondary" onclick="history.back();">⬅ Quay lại</button>
        </div>

    </div>
</div>
