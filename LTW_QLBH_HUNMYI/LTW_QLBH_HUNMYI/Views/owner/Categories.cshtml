@model IEnumerable<LTW_QLBH_HUNMYI.Models.DANHMUC>

@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}

<h4>📂 Quản lý danh mục</h4>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<a href="@Url.Action("CreateCategory")" class="btn btn-success mb-3">
    ➕ Thêm danh mục
</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Mã DM</th>
            <th>Tên danh mục</th>
            <th>Trạng thái</th>
            <th width="180">Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MADM</td>
                <td>@item.TENDM</td>
                <td>
                    <span class="badge bg-@(item.TRANGTHAI == "Hiển thị" ? "success" : "secondary")">
                        @item.TRANGTHAI
                    </span>
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            ⚙️ Thao tác
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("EditCategory", new { id = item.MADM })">
                                    <i class="bi bi-pencil-square text-warning"></i> ✏️ Sửa
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            @if (item.TRANGTHAI == "Hiển thị")
                            {
                                <li>
                                    <a class="dropdown-item text-danger" 
                                       href="@Url.Action("DeleteCategory", new { id = item.MADM })"
                                       onclick="return confirm('Bạn có chắc muốn ẩn danh mục này?');">
                                        <i class="bi bi-eye-slash"></i> 🚫 Ẩn danh mục
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="dropdown-item text-success" 
                                       href="@Url.Action("ShowCategory", new { id = item.MADM })"
                                       onclick="return confirm('Bạn có chắc muốn hiển thị lại danh mục này?');">
                                        <i class="bi bi-eye"></i> 👁️ Hiển thị lại
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
