@model LTW_QLBH_HUNMYI.Models.XUONGIN
@{
    ViewBag.Title = "Chi tiết xưởng in";
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
    var importHistory = ViewBag.ImportHistory as List<LTW_QLBH_HUNMYI.Models.PHIEUNHAP>
    ;
    }

    <div class="container-fluid">
        <!-- Header with Back Button -->
        <div class="row mb-4">
            <div class="col-md-12">
                <a href="@Url.Action("Suppliers")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
                <h2 class="mt-3">
                    <i class="fas fa-industry"></i> @Model.TENXI
                    @if (Model.TRANGTHAI == "Hoạt động")
                    {
                    <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                    <span class="badge bg-secondary">Ngừng hợp tác</span>
                    }
                </h2>
            </div>
        </div>

        <div class="row">
            <!-- Left Column: Supplier Information -->
            <div class="col-md-5">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin xưởng in</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tr>
                                <td width="40%"><strong>Mã xưởng in:</strong></td>
                                <td>@Model.MAXI</td>
                            </tr>
                            <tr>
                                <td><strong>Tên xưởng in:</strong></td>
                                <td>@Model.TENXI</td>
                            </tr>
                            <tr>
                                <td><strong>Địa chỉ:</strong></td>
                                <td>@Model.DIACHI</td>
                            </tr>
                            <tr>
                                <td><strong>Số điện thoại:</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.SDT))
                                    {
                                    <a href="tel:@Model.SDT"><i class="fas fa-phone"></i> @Model.SDT</a>
                                    }
                                    else
                                    {
                                    <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Email:</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.EMAIL))
                                    {
                                    <a href="mailto:@Model.EMAIL"><i class="fas fa-envelope"></i> @Model.EMAIL</a>
                                    }
                                    else
                                    {
                                    <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Người liên hệ:</strong></td>
                                <td>@(Model.NGUOILIENHE ?? "Chưa cập nhật")</td>
                            </tr>
                            <tr>
                                <td><strong>Trạng thái:</strong></td>
                                <td>
                                    @if (Model.TRANGTHAI == "Hoạt động")
                                    {
                                    <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                    <span class="badge bg-secondary">Ngừng hợp tác</span>
                                    }
                                </td>
                            </tr>
                        </table>

                        @if (!string.IsNullOrEmpty(Model.GHICHU))
                        {
                        <div class="alert alert-warning mt-3">
                            <h6><i class="fas fa-sticky-note"></i> Ghi chú/Nguyên nhân ngừng hợp tác:</h6>
                            <p class="mb-0">@Model.GHICHU</p>
                        </div>
                        }

                        <!-- Action Buttons -->
                        <div class="mt-4">
                            <a href="@Url.Action("EditSupplier", new { id = Model.MAXI })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Chỉnh sửa
                            </a>
                            @if (Model.TRANGTHAI == "Hoạt động")
                            {
                            <a href="@Url.Action("StopSupplier", new { id = Model.MAXI })" class="btn btn-secondary btn-sm">
                                <i class="fas fa-pause-circle"></i> Ngừng hợp tác
                            </a>
                            }
                            <a href="@Url.Action("DeleteSupplier", new { id = Model.MAXI })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Xóa vĩnh viễn
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Import History -->
            <div class="col-md-7">
                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-history"></i> Lịch sử nhập hàng</h5>
                    </div>
                    <div class="card-body">
                        @if (importHistory != null && importHistory.Count > 0)
                        {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã phiếu nhập</th>
                                        <th>Ngày nhập</th>
                                        <th>Quản lý</th>
                                        <th class="text-end">Tổng tiền</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in importHistory)
                                    {
                                    <tr>
                                        <td><strong>@item.MAPN</strong></td>
                                        <td>@(item.NGAYNHAP.HasValue ? item.NGAYNHAP.Value.ToString("dd/MM/yyyy HH:mm") : "")</td>
                                        <td>@(item.NHANVIEN?.HOTENNV ?? "")</td>
                                        <td class="text-end">@string.Format("{0:N0} đ", item.TONGTIEN)</td>
                                        <td>
                                            @if (item.TRANGTHAI == "Đã nhập")
                                            {
                                            <span class="badge bg-success">Đã nhập</span>
                                            }
                                            else
                                            {
                                            <span class="badge bg-danger">Đã hủy</span>
                                            }
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-active">
                                        <td colspan="3"><strong>Tổng cộng:</strong></td>
                                        <td class="text-end">
                                            <strong>
                                                @string.Format("{0:N0} đ", importHistory.Where(x => x.TRANGTHAI == "Đã nhập").Sum(x => x.TONGTIEN ?? 0))
                                            </strong>
                                        </td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div class="alert alert-info mt-3">
                            <i class="fas fa-chart-line"></i>
                            <strong>Thống kê:</strong> Đã nhập <strong>@importHistory.Count(x => x.TRANGTHAI == "Đã nhập")</strong> phiếu nhập từ xưởng in này.
                        </div>
                        }
                        else
                        {
                        <div class="alert alert-secondary text-center">
                            <i class="fas fa-inbox fa-3x mb-3"></i>
                            <p class="mb-0">Chưa có lịch sử nhập hàng từ xưởng in này</p>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            border-radius: 10px;
            border: none;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .table-borderless td {
            padding: 8px 0;
        }

        .badge {
            font-size: 0.85em;
            padding: 5px 10px;
        }
    </style>
