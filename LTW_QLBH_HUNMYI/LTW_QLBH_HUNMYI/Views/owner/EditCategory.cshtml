@model LTW_QLBH_HUNMYI.Models.DANHMUC

@{
    ViewBag.Title = "Chỉnh sửa danh mục";
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}

<h4>✏️ Chỉnh sửa danh mục</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MADM)

    <div class="card p-4 shadow-sm">
        <div class="mb-3">
            <label>Tên danh mục</label>
            @Html.TextBoxFor(m => m.TENDM, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label>Trạng thái</label>
            @Html.DropDownListFor(m => m.TRANGTHAI,
                new SelectList(new[] { "Hiển thị", "Ẩn" }),
                new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a href="@Url.Action("Categories")" class="btn btn-secondary ms-2">Quay lại</a>
    </div>
}
