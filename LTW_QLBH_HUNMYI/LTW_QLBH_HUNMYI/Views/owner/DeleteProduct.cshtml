@model LTW_QLBH_HUNMYI.Models.SANPHAM
@{
    ViewBag.Title = "Xác nhận xóa sản phẩm";
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Owner")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Products", "Owner")">Sản phẩm</a></li>
                <li class="breadcrumb-item active">Xóa sản phẩm</li>
            </ol>
        </nav>
    </div>
</div>

@if (Model == null)
{
    <div class="alert alert-danger">
        <i class="fas fa-times-circle"></i> Không tìm thấy sản phẩm!
    </div>
    <a href="@Url.Action("Products", "Owner")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
}
else
{
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Product Detail Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h5 class="mb-0">
                        <i class="fas fa-box"></i> Thông tin sản phẩm
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Product Image -->
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            @if (!string.IsNullOrEmpty(Model.HINHANH))
                            {
                                <img src="~/Content/Images/Products/@Model.HINHANH"
                                     alt="@Model.TENSP"
                                     class="img-fluid rounded shadow-sm"
                                     style="max-height: 250px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 250px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                        </div>

                        <!-- Product Info -->
                        <div class="col-md-8">
                            <div class="mb-3 pb-3 border-bottom">
                                <label class="text-muted small mb-1">Tên sản phẩm</label>
                                <h4 class="mb-0 text-primary">@Model.TENSP</h4>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted small mb-1">
                                        <i class="fas fa-barcode"></i> Mã sản phẩm
                                    </label>
                                    <p class="mb-0 fw-bold">@Model.MASP</p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted small mb-1">
                                        <i class="fas fa-tag"></i> Danh mục
                                    </label>
                                    <p class="mb-0 fw-bold">@(Model.DANHMUC?.TENDM ?? "N/A")</p>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted small mb-1">
                                        <i class="fas fa-money-bill-wave"></i> Giá bán
                                    </label>
                                    <p class="mb-0 fw-bold text-success">
                                        @string.Format("{0:N0}", Model.GIA) đ
                                    </p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="text-muted small mb-1">
                                        <i class="fas fa-boxes"></i> Số lượng tồn
                                    </label>
                                    <p class="mb-0 fw-bold">@Model.SOLUONGTON</p>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="text-muted small mb-1">
                                    <i class="fas fa-info-circle"></i> Trạng thái hiện tại
                                </label>
                                <p class="mb-0">
                                    @if (Model.TRANGTHAI == "Đang bán")
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle"></i> @Model.TRANGTHAI
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-ban"></i> @Model.TRANGTHAI
                                        </span>
                                    }
                                </p>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.MOTA))
                            {
                                <div>
                                    <label class="text-muted small mb-1">
                                        <i class="fas fa-align-left"></i> Mô tả
                                    </label>
                                    <p class="mb-0 text-muted">@Model.MOTA</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Confirmation Form -->
            @using (Html.BeginForm("DeleteProduct", "Owner", FormMethod.Post, new { @class = "mb-4" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("id", Model.MASP)

                <div class="card shadow-sm border-danger">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-question-circle fa-2x text-danger me-3"></i>
                            <div>
                                <h5 class="mb-1">Xác nhận hành động</h5>
                                <p class="mb-0 text-muted">
                                    Sản phẩm <strong class="text-danger">"@Model.TENSP"</strong> sẽ bị xóa
                                </p>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Products", "Owner")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                                <i class="fas fa-trash-alt"></i> Xác nhận xóa
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@section styles {
    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .card {
            transition: transform 0.2s ease-in-out;
        }

        .btn {
            transition: all 0.3s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.15);
            }

        .alert {
            border-left: 4px solid;
        }

        .alert-warning {
            border-left-color: #ffc107;
        }

        .img-fluid {
            transition: transform 0.3s ease;
        }

            .img-fluid:hover {
                transform: scale(1.05);
            }
    </style>
}
