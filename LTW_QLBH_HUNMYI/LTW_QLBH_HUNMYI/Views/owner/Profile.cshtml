
@model LTW_QLBH_HUNMYI.Models.NHANVIEN
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_LayoutOwner.cshtml";
}



<h2 class="mb-4">
    <i class="fas fa-user-circle"></i> Thông tin tài khoản
</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <!-- Profile Information -->
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-user"></i> Thông tin cá nhân</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("UpdateProfile", "Owner", FormMethod.Post, new { @class = "needs-validation" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="HOTENNV" class="form-label">
                                Họ tên <span class="text-danger">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.HOTENNV, new { @class = "form-control", required = "required" })
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="GIOITINH" class="form-label">Giới tính</label>
                            @Html.DropDownListFor(m => m.GIOITINH,
                                new List<SelectListItem> {
                                    new SelectListItem { Text = "Nam", Value = "Nam" },
                                    new SelectListItem { Text = "Nữ", Value = "Nữ" }
                                },
                                new { @class = "form-select" })
                        </div>
                    </div>

                    @*<div class="mb-3">
                            <label class="form-label">Ngày đăng ký</label>
                            <input type="text" class="form-control" value="@Model.NGAYSINH?.ToString(" dd /MM/yyyy")" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ngày đăng ký</label>
                            <input type="text" class="form-control" value="@Model.NGAYVAOLAM?.ToString(" dd /MM/yyyy")" readonly>
                        </div>*@

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="SDT" class="form-label">
                                Số điện thoại <span class="text-danger">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", pattern = "[0-9]{10}", required = "required" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="EMAIL" class="form-label">
                                Email <span class="text-danger">*</span>
                            </label>
                            @Html.TextBoxFor(m => m.EMAIL, new { @class = "form-control", type = "email", required = "required" })
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="DIACHI" class="form-label">Địa chỉ</label>
                        @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cập nhật thông tin
                    </button>
                }
            </div>
        </div>

        <!-- Change Password -->
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-key"></i> Đổi mật khẩu</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Để đảm bảo an toàn, vui lòng đổi mật khẩu thường xuyên</p>
                <a href="@Url.Action("ChangePassword", "Owner")" class="btn btn-outline-primary">
                    <i class="fas fa-lock"></i> Đổi mật khẩu
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Sidebar -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-chart-line"></i> Thống kê tổng quan</h5>
            </div>
            <div class="card-body">
                <div class="mb-3 pb-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-shopping-cart text-primary"></i>
                            <span class="ms-2">Tổng đơn hàng</span>
                        </div>
                        <strong class="text-primary">@ViewBag.TotalOrders</strong>
                    </div>
                </div>
                <div class="mb-3 pb-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-dollar-sign text-success"></i>
                            <span class="ms-2">Doanh thu</span>
                        </div>
                        <strong class="text-success">@string.Format("{0:N0}", ViewBag.TotalRevenue) đ</strong>
                    </div>
                </div>
                <div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-box text-info"></i>
                            <span class="ms-2">Sản phẩm</span>
                        </div>
                        <strong class="text-info">@ViewBag.TotalProducts</strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Info -->
        <div class="card mt-3">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin tài khoản</h5>
            </div>
            <div class="card-body">
                <p class="mb-2">
                    <strong>Mã nhân viên:</strong><br>
                    <span class="text-muted">@Model.MANV</span>
                </p>
                <p class="mb-2">
                    <strong>Ngày sinh:</strong><br>
                    <span class="text-muted">@(Model.NGAYSINH?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</span>
                </p>
                <p class="mb-0">
                    <strong>Ngày vào làm:</strong><br>
                    <span class="text-muted">@(Model.NGAYVAOLAM?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</span>
                </p>
            </div>
        </div>
    </div>

</div>
</div>

