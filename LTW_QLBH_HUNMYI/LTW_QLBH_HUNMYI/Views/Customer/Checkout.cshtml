@model List<LTW_QLBH_HUNMYI.Models.CHITIET_GIOHANG>
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    var customer = ViewBag.Customer as LTW_QLBH_HUNMYI.Models.KHACHHANG;
}

<!-- Progress Steps -->
<div class="mb-4">
    <div class="d-flex justify-content-center">
        <div class="checkout-progress">
            <div class="step completed">
                <div class="step-icon"><i class="fas fa-shopping-cart"></i></div>
                <div class="step-title">Giỏ hàng</div>
            </div>
            <div class="step-line"></div>
            <div class="step active">
                <div class="step-icon"><i class="fas fa-credit-card"></i></div>
                <div class="step-title">Thanh toán</div>
            </div>
            <div class="step-line"></div>
            <div class="step">
                <div class="step-icon"><i class="fas fa-check-circle"></i></div>
                <div class="step-title">Hoàn tất</div>
            </div>
        </div>
    </div>
</div>

<h2 class="mb-4">
    <i class="fas fa-credit-card"></i> Thanh toán đơn hàng
</h2>

@using (Html.BeginForm("PlaceOrder", "Customer", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate", id = "checkoutForm" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <!-- Shipping Information -->
        <div class="col-lg-7">
            <!-- Shipping Address -->
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-shipping-fast"></i> Thông tin giao hàng
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="hoTenNguoiNhan" class="form-label">
                                <i class="fas fa-user"></i> Họ tên người nhận <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control" id="hoTenNguoiNhan" name="hoTenNguoiNhan"
                                   value="@customer.HOTENKH" placeholder="Nhập họ tên người nhận" required>
                            <div class="invalid-feedback">
                                Vui lòng nhập họ tên người nhận
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="sdtNguoiNhan" class="form-label">
                                <i class="fas fa-phone"></i> Số điện thoại <span class="text-danger">*</span>
                            </label>
                            <input type="tel" class="form-control" id="sdtNguoiNhan" name="sdtNguoiNhan"
                                   value="@customer.SDT" pattern="[0-9]{10}" placeholder="0123456789" required>
                            <div class="invalid-feedback">
                                Vui lòng nhập số điện thoại hợp lệ (10 số)
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input type="email" class="form-control" id="email"
                               value="@customer.EMAIL" readonly>
                        <small class="form-text text-muted">Email để nhận thông tin đơn hàng</small>
                    </div>

                    <div class="mb-3">
                        <label for="diaChiGiaoHang" class="form-label">
                            <i class="fas fa-map-marker-alt"></i> Địa chỉ giao hàng <span class="text-danger">*</span>
                        </label>
                        <textarea class="form-control" id="diaChiGiaoHang" name="diaChiGiaoHang"
                                  rows="3" placeholder="Số nhà, tên đường, phường/xã, quận/huyện, tỉnh/thành phố" required>@customer.DIACHI</textarea>
                        <div class="invalid-feedback">
                            Vui lòng nhập địa chỉ giao hàng
                        </div>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i>
                            Vui lòng nhập địa chỉ chi tiết để giao hàng nhanh chóng
                        </small>
                    </div>

                    <div class="mb-0">
                        <label for="ghiChu" class="form-label">
                            <i class="fas fa-sticky-note"></i> Ghi chú đơn hàng
                        </label>
                        <textarea class="form-control" id="ghiChu" name="ghiChu"
                                  rows="2" placeholder="Ví dụ: Giao hàng giờ hành chính, gọi trước 15 phút..."></textarea>
                        <small class="form-text text-muted">Ghi chú về thời gian hoặc yêu cầu đặc biệt</small>
                    </div>
                </div>
            </div>

            <!-- Payment Method -->
            <div class="card mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-money-bill-wave"></i> Phương thức thanh toán
                    </h5>
                </div>
                <div class="card-body">
                    <div class="payment-option mb-3 p-3 border rounded" onclick="selectPayment('cod')">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod"
                                   id="cod" value="cod" checked>
                            <label class="form-check-label w-100" for="cod">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-money-bill-wave fa-2x text-success me-3"></i>
                                    <div>
                                        <strong>Thanh toán khi nhận hàng (COD)</strong>
                                        <br>
                                        <small class="text-muted">Thanh toán bằng tiền mặt khi nhận hàng</small>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="payment-option p-3 border rounded" onclick="selectPayment('transfer')">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod"
                                   id="transfer" value="transfer">
                            <label class="form-check-label w-100" for="transfer">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-university fa-2x text-primary me-3"></i>
                                    <div>
                                        <strong>Chuyển khoản ngân hàng</strong>
                                        <br>
                                        <small class="text-muted">Chuyển khoản qua Internet Banking</small>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="alert alert-info mt-3 mb-0">
                        <i class="fas fa-info-circle"></i>
                        <small>
                            Mọi giao dịch đều được bảo mật và mã hóa. Thông tin của bạn sẽ được bảo vệ tuyệt đối.
                        </small>
                    </div>
                </div>
            </div>

            <!-- Terms and Conditions -->
            <div class="card">
                <div class="card-body">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="acceptTerms" required>
                        <label class="form-check-label" for="acceptTerms">
                            Tôi đã đọc và đồng ý với
                            <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Điều khoản và điều kiện</a>
                            của Hunmyi Shop <span class="text-danger">*</span>
                        </label>
                        <div class="invalid-feedback">
                            Bạn cần đồng ý với điều khoản để tiếp tục
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-5">
            <div class="sticky-top" style="top: 20px;">
                <!-- Order Details -->
                <div class="card mb-3">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="fas fa-file-invoice"></i> Đơn hàng của bạn
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Product List -->
                        <div class="order-items mb-3" style="max-height: 350px; overflow-y: auto;">
                            @foreach (var item in Model)
                            {
                                <div class="d-flex mb-3 pb-3 border-bottom">
                                    <div class="flex-shrink-0 position-relative">
                                        @if (!string.IsNullOrEmpty(item.SANPHAM.HINHANH))
                                        {
                                            <img src="@Url.Content("~/Content/Images/Products/" + item.SANPHAM.HINHANH)"
                                                 alt="@item.SANPHAM.TENSP"
                                                 style="width: 70px; height: 70px; object-fit: cover;"
                                                 class="rounded"
                                                 onerror="this.src='@Url.Content("~/Content/Images/no-image.jpg")'">
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                @item.SOLUONG
                                            </span>
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                 style="width: 70px; height: 70px;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">@item.SANPHAM.TENSP</h6>
                                        <small class="text-muted">
                                            @String.Format("{0:N0}", item.SANPHAM.GIA)đ x @item.SOLUONG
                                        </small>
                                        <br>
                                        <strong class="text-danger">
                                            @String.Format("{0:N0}", item.SOLUONG * item.SANPHAM.GIA)đ
                                        </strong>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Order Total -->
                        <div class="border-top pt-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Tạm tính:</span>
                                <strong>@String.Format("{0:N0}", ViewBag.TotalAmount)đ</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Phí vận chuyển:</span>
                                <strong class="text-success">Miễn phí</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Giảm giá:</span>
                                <strong>0đ</strong>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <h5 class="mb-0">Tổng cộng:</h5>
                                <h5 class="mb-0 text-danger">@String.Format("{0:N0}", ViewBag.TotalAmount)đ</h5>
                            </div>

                            <!-- Place Order Button -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg" id="placeOrderBtn">
                                    <i class="fas fa-check-circle"></i> Đặt hàng
                                </button>

                                <a href="@Url.Action("Cart", "Customer")" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left"></i> Quay lại giỏ hàng
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Security Badge -->
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                        <h6 class="mb-2">Thanh toán an toàn & bảo mật</h6>
                        <small class="text-muted">
                            Thông tin của bạn được bảo vệ bởi mã hóa SSL 256-bit
                        </small>
                        <div class="mt-3">
                            <i class="fab fa-cc-visa fa-2x text-primary me-2"></i>
                            <i class="fab fa-cc-mastercard fa-2x text-warning me-2"></i>
                            <i class="fas fa-university fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Terms and Conditions Modal -->
<div class="modal fade" id="termsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Điều khoản và điều kiện</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>1. Chính sách giao hàng</h6>
                <p>- Giao hàng toàn quốc trong 2-3 ngày làm việc</p>
                <p>- Miễn phí vận chuyển cho đơn hàng trên 200.000đ</p>

                <h6>2. Chính sách đổi trả</h6>
                <p>- Đổi trả trong vòng 7 ngày nếu sản phẩm lỗi</p>
                <p>- Sản phẩm phải còn nguyên tem mác</p>

                <h6>3. Chính sách thanh toán</h6>
                <p>- Hỗ trợ thanh toán COD và chuyển khoản</p>
                <p>- Không lưu trữ thông tin thẻ tín dụng</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="$('#acceptTerms').prop('checked', true)">
                    Tôi đồng ý
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function selectPayment(method) {
            $('#' + method).prop('checked', true);
            $('.payment-option').removeClass('border-primary');
            $('#' + method).closest('.payment-option').addClass('border-primary');
        }

        // Phone number validation
        $('#sdtNguoiNhan').on('input', function() {
            this.value = this.value.replace(/[^0-9]/g, '');
        });

        // Form validation
        $('#checkoutForm').on('submit', function(e) {
            var form = this;

            if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
                $(form).addClass('was-validated');

                // Scroll to first error
                var firstError = $(form).find(':invalid').first();
                if (firstError.length) {
                    $('html, body').animate({
                        scrollTop: firstError.offset().top - 100
                    }, 500);
                }

                return false;
            }

            // Show loading
            var btn = $('#placeOrderBtn');
            btn.prop('disabled', true);
            btn.html('<i class="fas fa-spinner fa-spin"></i> Đang xử lý...');

            return true;
        });

        // Bootstrap form validation
        (function() {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Auto-save form data to localStorage (optional)
        $('#checkoutForm input, #checkoutForm textarea').on('change', function() {
            var fieldName = $(this).attr('name');
            if (fieldName) {
                localStorage.setItem('checkout_' + fieldName, $(this).val());
            }
        });

        // Restore form data
        $(document).ready(function() {
            $('#checkoutForm input, #checkoutForm textarea').each(function() {
                var fieldName = $(this).attr('name');
                if (fieldName) {
                    var savedValue = localStorage.getItem('checkout_' + fieldName);
                    if (savedValue && !$(this).val()) {
                        $(this).val(savedValue);
                    }
                }
            });
        });
    </script>
    }

    <style>
        .checkout-progress {
            display: flex;
            align-items: center;
            max-width: 600px;
            margin: 0 auto;
        }

        .step {
            text-align: center;
            flex: 1;
        }

        .step-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #e9ecef;
            color: #6c757d;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            margin-bottom: 8px;
        }

        .step.completed .step-icon {
            background: #28a745;
            color: white;
        }

        .step.active .step-icon {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            animation: pulse 2s infinite;
        }

        .step-title {
            font-size: 0.875rem;
            color: #6c757d;
        }

        .step.active .step-title {
            color: #f093fb;
            font-weight: bold;
        }

        .step-line {
            flex: 1;
            height: 2px;
            background: #e9ecef;
            margin: 0 10px 20px;
        }

        .payment-option {
            cursor: pointer;
            transition: all 0.3s;
        }

        .payment-option:hover {
            background-color: #f8f9fa;
        }

        .payment-option.border-primary {
            border-width: 2px !important;
        }

        .step-icon {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }
    </style>
