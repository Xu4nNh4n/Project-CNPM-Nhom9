@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<!-- Hero Banner -->
<div class="hero-section mb-5">
    <div class="card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; border-radius: 20px; padding: 60px 40px;">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold mb-4">Chào mừng đến Hunmyi Shop!</h1>
                <p class="lead mb-4">
                    Khám phá các sản phẩm merchandise chính hãng từ các game và anime yêu thích của bạn
                </p>
                <a href="@Url.Action("Products", "Customer")" class="btn btn-light btn-lg">
                    <i class="fas fa-shopping-bag"></i> Mua sắm ngay
                </a>
            </div>
            <div class="col-md-6 text-end">
                <i class="fas fa-gift" style="font-size: 200px; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Danh mục -->
<div class="mb-5">
    <h2 class="text-center mb-4">
        <i class="fas fa-th-large"></i> Danh mục sản phẩm
    </h2>
    <div class="row g-4">
        @if (ViewBag.Categories != null)
        {
            foreach (var category in ViewBag.Categories)
            {
                <div class="col-md-4 col-lg-3">
                    <a href="@Url.Action("Products", "Customer", new { category = category.MADM })"
                       class="text-decoration-none">
                        <div class="category-card">
                            <i class="fas fa-box-open fa-3x mb-3" style="color: #f093fb;"></i>
                            <h5>@category.TENDM</h5>
                            <p class="text-muted mb-0">@category.MOTA_DM</p>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>

<!-- Sản phẩm mới nhất -->
<div class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-star"></i> Sản phẩm mới nhất
        </h2>
        <a href="@Url.Action("Products", "Customer")" class="btn btn-outline-primary">
            Xem tất cả <i class="fas fa-arrow-right"></i>
        </a>
    </div>
    <div class="row g-4">
        @if (ViewBag.NewProducts != null)
        {
            foreach (var product in ViewBag.NewProducts)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="product-card">
                        <a href="@Url.Action("ProductDetail", "Customer", new { id = product.MASP })">
                            @if (!string.IsNullOrEmpty(product.HINHANH))
                            {
                                <img src="@Url.Content("~/Content/Images/Products/" + product.HINHANH)"
                                     class="product-image" alt="@product.TENSP">
                            }
                            else
                            {
                                <div class="product-image d-flex align-items-center justify-content-center bg-light">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                        </a>
                        <div class="p-3">
                            <h6 class="mb-2">
                                <a href="@Url.Action("ProductDetail", "Customer", new { id = product.MASP })"
                                   class="text-decoration-none text-dark">
                                    @product.TENSP
                                </a>
                            </h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-danger fw-bold fs-5">
                                    @String.Format("{0:N0}", product.GIA)đ
                                </span>
                                <button class="btn btn-sm btn-primary"
                                        onclick="addToCart('@product.MASP', 1)">
                                    <i class="fas fa-cart-plus"></i>
                                </button>
                            </div>
                            <small class="text-muted">
                                <i class="fas fa-box"></i> Còn @product.SOLUONGTON sản phẩm
                            </small>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- Sản phẩm bán chạy -->
<div class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-fire"></i> Sản phẩm bán chạy
        </h2>
    </div>
    <div class="row g-4">
        @if (ViewBag.HotProducts != null)
        {
            foreach (var product in ViewBag.HotProducts)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="product-card">
                        <div class="position-relative">
                            <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                <i class="fas fa-fire"></i> HOT
                            </span>
                            <a href="@Url.Action("ProductDetail", "Customer", new { id = product.MASP })">
                                @if (!string.IsNullOrEmpty(product.HINHANH))
                                {
                                    <img src="@Url.Content("~/Content/Images/Products/" + product.HINHANH)"
                                         class="product-image" alt="@product.TENSP">
                                }
                                else
                                {
                                    <div class="product-image d-flex align-items-center justify-content-center bg-light">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                }
                            </a>
                        </div>
                        <div class="p-3">
                            <h6 class="mb-2">
                                <a href="@Url.Action("ProductDetail", "Customer", new { id = product.MASP })"
                                   class="text-decoration-none text-dark">
                                    @product.TENSP
                                </a>
                            </h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-danger fw-bold fs-5">
                                    @String.Format("{0:N0}", product.GIA)đ
                                </span>
                                <button class="btn btn-sm btn-primary"
                                        onclick="addToCart('@product.MASP', 1)">
                                    <i class="fas fa-cart-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section scripts {
    <script>
function addToCart(productId, quantity) {
    $.ajax({
        url: '@Url.Action("AddToCart", "Customer")',
        type: 'POST',
        data: { productId: productId, quantity: quantity },
        success: function(response) {
            if (response.success) {
                alert(response.message);
                $('#cartCount').text(response.cartCount);
            } else {
                alert(response.message);
            }
        },
        error: function() {
            alert('Có lỗi xảy ra!');
        }
    });
}

// Load cart count on page load
$(document).ready(function() {
    $.ajax({
        url: '@Url.Action("GetCartCount", "Customer")',
        type: 'GET',
        success: function(response) {
            if (response.success) {
                $('#cartCount').text(response.count);
            }
        }
    });
});
    </script>
}